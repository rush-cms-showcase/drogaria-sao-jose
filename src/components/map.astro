---
import 'leaflet/dist/leaflet.css'
---

<div id="hero-map" class="w-full h-full z-10 font-inter bg-slate-100/50 flex items-center justify-center">
  <div class="animate-pulse text-slate-400 text-sm font-medium">Carregando mapa...</div>
</div>

<script src="./map.ts"></script>

<style is:global>
  .leaflet-container {
    background: #f1f5f9 !important; /* slate-100 */
    font-family: inherit;
  }
  .leaflet-popup-content-wrapper {
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1) !important;
    border-radius: 1rem !important;
    border: none !important;
  }
  .leaflet-popup-content {
    margin: 0 !important;
    padding: 0.75rem !important;
  }
  .leaflet-popup-tip {
    box-shadow: 0 20px 25px -5px rgb(0 0 0 / 0.1) !important;
  }
  .custom-div-icon {
    background: transparent;
    border: none;
  }
</style>
