---
import { units } from '@/data/units'
import IconShieldCheck from '~icons/ph/shield-check-duotone'
---

<section class="py-12 bg-slate-50 border-y border-slate-200 overflow-hidden relative">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
      
      <!-- Trust Header -->
      <div class="flex items-center gap-4 lg:w-1/3">
        <div class="p-3 bg-white rounded-2xl shadow-sm ring-1 ring-slate-200">
          <IconShieldCheck class="w-10 h-10 text-emerald-600" />
        </div>
        <div>
          <h3 class="font-bold text-slate-900 tracking-tight leading-tight mb-1 text-lg">Responsabilidade e Confiança</h3>
          <p class="text-xs text-slate-500 font-medium tracking-wide font-inter">CERTIFICAÇÃO TÉCNICA GARANTIDA</p>
        </div>
      </div>

      <!-- CRFs Scroll Area -->
      <div class="lg:w-2/3 w-full backdrop-blur-sm bg-white/40 rounded-2xl p-4 ring-1 ring-slate-200 relative overflow-hidden">
        
        <!-- Fades for edge overflow on desktop -->
        <div class="absolute inset-y-0 left-0 w-8 bg-gradient-to-r from-slate-50/80 to-transparent z-10 pointer-events-none hidden lg:block"></div>
        <div class="absolute inset-y-0 right-0 w-8 bg-gradient-to-l from-slate-50/80 to-transparent z-10 pointer-events-none hidden lg:block"></div>

        <div class="flex overflow-x-auto pb-2 snap-x snap-mandatory hide-scroll gap-6 sm:gap-8 lg:px-4">
          {units.map((unit) => (
            <div class="snap-start min-w-max flex-shrink-0 flex items-center gap-3 bg-white px-4 py-2.5 rounded-xl shadow-sm border border-slate-100">
              <div class="flex flex-col justify-center">
                <span class="text-xs font-semibold text-slate-900 block truncate">{unit.name}</span>
                <span class="text-[10px] text-slate-500 flex items-center gap-1.5 uppercase font-medium mt-0.5 tracking-wider">
                  <span class="text-emerald-600">Atendimento</span> Especializado
                </span>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>
  </div>

  <!-- Background decorative element -->
  <div class="absolute -top-24 -right-24 w-96 h-96 bg-emerald-100/50 rounded-full blur-3xl opacity-50 pointer-events-none"></div>
</section>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .hide-scroll::-webkit-scrollbar {
    display: none;
  }
  /* Hide scrollbar for IE, Edge and Firefox */
  .hide-scroll {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
  }
</style>
